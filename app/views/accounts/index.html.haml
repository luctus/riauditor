.grid
  .unit.three-quarters
    %h1 Registered Accounts
  .unit.one-quarter.text-right
    = link_to 'New Account', new_account_path, class: 'button'

.grid
  - @accounts.each do |account|
    .unit.one-third.account
      .name= account.name
      .access_key_id= account.access_key_id
      .actions
        = link_to 'Details', account
        = link_to 'Run the auditor', audit_account_path(account)
