.grid
  .unit.half
    %h2 Account Details
    %p
      %b Name:
      = @account.name
    %p
      %b Access key:
      = @account.access_key_id
    %p
      %b Secret access key:
      = @account.secret_access_key

    .actions
      = link_to 'Back', accounts_path
      = link_to 'Edit', edit_account_path(@account)
      = link_to 'Destroy', @account, :method => :delete, :data => { :confirm => 'Are you sure?' }

  .unit.half
    %h2 What's next?
    = link_to 'Run the auditor', audit_account_path(@account), class: 'button'
